<%- include('./includes/head') %>

  <body>

    <%- include('./includes/navbar') %>

      <div class="container my-5">

        <button class="btn btn-primary mb-2" id="botao_primario">MATERIAL DE APOIO</button>

        <p>
          TÓPICO: <%= topico.nome %>
        </p>

        <% if (aulas.length==0) { %>
          <p id="topicos_aulas_titulo">
            não há aulas cadastradas para esse tópico.
          </p>
        <% } %>

        <% aulas.forEach(aula=> { %>

          <% if (aula.arquivos.length > 0) { %>
            <div id="arquivos_aula_titulo">
              <%= aula.nome %>
            </div>

            <% aula.arquivos.forEach(arquivo=> { %>

              <div class="d-flex align-items-center mb-3">

                  <a href="/tmp/uploads/<%= arquivo.filename %>" target="_blank">
                    <p id="topicos_aulas_titulo">
                      -- <%= arquivo.originalname %>
                    </p>
                  </a>

                  <!-- BOTÃO PARA APAGAR UM ARQUIVO -->

                  <form
                  action="/disciplinas/<%= id_disciplina %>/topicos/<%= id_topico %>/arquivos/<%= arquivo.filename %>/?_method=DELETE"
                  method="post" enctype="multipart/form-data">

                    <button id="aulas_botao_deletar" type="submit">
                      <i class="far fa-trash-alt" id="topicos_icones"></i>
                    </button>

                  </form>

              </div>

            <% }) %>

          <% } %>

        <% }) %>

        <a href="/disciplinas/<%= id_disciplina %>/topicos/">
          <button class="btn btn-primary mb-2" id="botao_terciario">
            voltar
          </button>
        </a>

      </div>

  </body>

  </html>
