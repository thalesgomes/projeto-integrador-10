<%- include('./includes/head') %>

  <body>

    <div class="d-flex" id="login_wrapper">

      <div class="d-flex flex-column justify-content-center align-items-center" id="login_lado_esquerdo">
        <h1 id="login_logo">SABER DIGITAL</h1>
      </div>

      <div class="d-flex justify-content-evenly align-items-center" id="login_lado_direito">
        <div id="login_form_wrapper">

          <form action="/login" method="post" id="login_form">
            <p id="login_titulo">login</p>

            <div>
              <label for="email" class="form-label"></label>
              <input type="email" name="email" class="form-control" id="form_input" placeholder="digite o seu email"
                aria-describedby="emailHelp">
            </div>

            <div class="mb-3">
              <label for="password" class="form-label"></label>
              <input type="password" name="senha" class="form-control" placeholder="digite a sua senha" id="form_input">
            </div>

            <button type="submit" class="btn btn-primary mb-4" id="botao_primario">ENTRAR</button>

          </form>

          <p id="login_paragrafo">ainda n√£o possui cadastro?</p>

          <a href="/cadastro">
            <button type="submit" class="btn btn-primary" id="botao_secundario">
              registre aqui
            </button>
          </a>
        </div>

        <% if (erros.length> 0) { %>
          <div style="z-index: 11" class="d-flex flex-column justify-content-around align-items-end">
            <% erros.forEach(erro=> { %>
              <span id="login_erros">
                <%= erro %>
              </span>
              <% }) %>
          </div>
          <% } %>

      </div>

    </div>

  </body>

  </html>
