<%- include('./includes/head') %>
<link rel="stylesheet" href="../../public/styles/style.css">

    <body>

        <div id="register__container">

            <form action="/cadastro" method="post" id="register__form">

                <div class="mb-3">
                    <span id="register_fields">nome:</span>
                    <label for="nome" class="form-label"></label>
                    <input type="text" name="nome" class="form-control" id="input__form"
                        placeholder="digite o seu nome">
                </div>

                <div class="mb-3">
                    <span id="register_fields">sobrenome:</span>
                    <label for="sobrenome" class="form-label"></label>
                    <input type="text" name="sobrenome" class="form-control" id="input__form"
                        placeholder="digite o seu sobrenome">
                </div>

                <div class="mb-3">
                    <span id="register_fields">email:</span>
                    <label for="email" class="form-label"></label>
                    <input type="email" name="email" class="form-control" id="input__form"
                        placeholder="digite o seu email" aria-describedby="emailHelp">
                </div>

                <div class="mb-3">
                    <span id="register_fields">senha:</span>
                    <label for="senha" class="form-label"></label>
                    <input type="password" name="senha" class="form-control" id="input__form"
                        placeholder="digite a sua senha">
                </div>

                <span id="register_fields">categoria:</span>
                <select name="categoria" class="form-select" id="register__category">
                    <option value="estudante">estudante</option>
                    <option value="professor">professor(a)</option>
                </select>

                <span id="register_fields">disciplina:</span>
                <select name="disciplina" class="form-select" id="register__category">
                    <option value="1">artes</option>
                    <option value="2">biologia</option>
                    <option value="3">espanhol</option>
                    <option value="4">filosofia</option>
                    <option value="5">física</option>
                    <option value="6">geografia</option>
                    <option value="7">história</option>
                    <option value="8">inglês</option>
                    <option value="9">literatura</option>
                    <option value="10">matemática</option>
                    <option value="11">português</option>
                    <option value="12">química</option>
                    <option value="13">redação</option>
                    <option value="14">sociologia</option>
                </select>

                <button type="submit" class="btn btn-primary my-3" id="button__primary">CADASTRAR</button>

            </form>
        </div>

        <%- include('./includes/script') %>
    </body>

    </html>