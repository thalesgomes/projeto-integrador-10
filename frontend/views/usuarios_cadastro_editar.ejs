<%- include('./partials/head') %>
  <link rel="stylesheet" href="/stylesheets/usuario_cadastro.css">
  </head>

  <body>

    <header>
      <div class="container">
        <h1>Cadastro do usuário</h1>
      </div>
    </header>
    
    <main>
      <section class="form-cadastro">
        <div class="container">

          <form action="/professores/<%= usuario.id %> " method="POST">
            <label for="nome">nome:</label>
            <input type="text" name="nome" id="nome" placeholder="insira seu nome" value="<%= usuario.nome %>" required><br>

            <label for="sobrenome">sobrenome:</label>
            <input type="text" name="sobrenome" id="sobrenome" placeholder="insira seu sobrenome" value="<%= usuario.sobrenome %>" required><br>

            <label for="email">e-mail</label>
            <input type="email" name="email" placeholder="insira seu e-mail" value="<%= usuario.email %>" required><br>
            
            <label for="senha">senha:</label>
            <input type="password" name="senha" placeholder="insira sua senha" value="<%= usuario.senha %>" required><br>

            <label for="categoria">categoria:</label>
            <select name="categoria" id="categoria">
                <option value="estudante">estudante</option>
                <option value="professor">professor(a)</option>
            </select>
            <br>
            <label for="disciplina">Disciplina Relacionada:</label>
            <select name="disciplina" id="disciplina">
                <option value="1">artes</option>
                <option value="2">biologia</option>
                <option value="3">espanhol</option>
                <option value="4">filosofia</option>
                <option value="5">física</option>
                <option value="6">geografia</option>
                <option value="7">história</option>
                <option value="8">inglês</option>
                <option value="9">literatura</option>
                <option value="10">matemática</option>
                <option value="11">português</option>
                <option value="12">química</option>
                <option value="13">redação</option>
                <option value="14">sociologia</option>
            </select>
            <br>
            <button type="submit">CADASTRAR CONTA</button>
          </form>
        </div>
      </section>

    </main>
  </body>
  <%- include('./partials/footer') %>

    </html>