<%- include('./partials/head') %>
    <link rel="stylesheet" href="/stylesheets/aulas_edicao.css">
    </head>

    <body>
        <%- include('./partials/header') %>
            <main>

                <div class="container">
                    <div class="content-container">

                        <section class="add-material">

                            <p>EDITAR AULA</p>

                            <form id="aula" action="/disciplinas/<%= id_disciplina %>/professores/<%= professor_id %>/topicos/<%= id_topico %>/aulas" method="POST" enctype="multipart/form-data">
                                <!-- <div class="lista-topicos">
                                    <button>tópico</button>
                                    <input type="text" name="topico" placeholder="escolha o topico">
                                </div> -->

                                <div class="add-material-cabecalho">
                                    <div>
                                        <input type="text" name="nome" placeholder="digite o nome da aula">
                                        <button>aula</button>
                                    </div>

                                    <div>
                                        <input type="text" name="url_aula"
                                        placeholder="Insira a URL ou ID do vídeo (youTube ou vimeo)">
                                        <button>vídeo</button>
                                    </div>

                                    <div>
                                        <input type="file" name="file" single>
                                        <button>pdf</button>
                                    </div>

                                    <!-- <div>
                                        <button>pdf</button>
                                        <input class="file" type="file" multiple>
                                    </div> -->
                                </div>

                                <label id="descricao-titulo">Descrição</label>
                                <br>
                                <textarea name="descricao_aula" id="descricao-titulo"
                                    placeholder="Escreva aqui a descrição"></textarea>
                                <br>
                                <button id="adicionar-aula" type="submit">ADICIONAR AULA</button>
                            </form>

                        </section>

                    </div>
                </div>
            </main>
            <%- include('./partials/footer') %>
    </body>

    </html>