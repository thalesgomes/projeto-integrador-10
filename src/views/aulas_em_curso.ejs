<%- include('./partials/head') %>
    <link rel="stylesheet" href="/stylesheets/aulas_em_curso.css">


    </head>

    <body>
        <script>

            function load(url) {
                document.getElementById("kelly").src = url;
                // document.getElementsByTagName('src').innerHTML = url;
            }

        </script>

        <header>
            <div class="container">
                <div class="logo">
                    <h2>SaberDigital</h2>
                </div>
                <div class="barra-pesquisa">
                    <input type="text" placeholder="Buscar outras bases de conhecimento" id="barra-pesquisa"
                        name="barra-pesquisa">
                </div>
                <div class="logado">
                    <button><i class="far fa-user"></i></button>
                </div>
            </div>
        </header>
        <main>

            <div class="container-botoes">
                <div class="container botoes">
                    <button>MEU DASHBOARD</button>
                    <button>BIBLIOTECA</button>
                    <button>FÓRUM</button>
                </div>
            </div>

            <div class="content container">

                <div class="container-aula col-8">

                        <iframe width="782" height="440" id="kelly" src="https://www.youtube.com/embed/HlLGoX1vbjA"
                            title="YouTube video player" frameborder="0"
                            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                            allowfullscreen></iframe>


                            <div class="container-material">

                                <!-- Tab links -->
                                <div class="tab">
                                    <button class="tablinks" onclick="openCity(event, 'material')">Material</button>
                                    <button class="tablinks" onclick="openCity(event, 'duvidas')">Dúvidas</button>
                                    <button class="tablinks"
                                        onclick="openCity(event, 'comentarios')">Comentários</button>
                                </div>

                                <!-- Tab content -->
                                <div id="material" class="tabcontent">
                                    <h3>Material da Aula</h3>
                                    <p>Como colar e ser descolado?</p>
                                </div>

                                <div id="duvidas" class="tabcontent">
                                    <h3>Dúvidas</h3>
                                    <p>Qual a cor do cavalo branco de napoleão?</p>
                                </div>

                                <div id="comentarios" class="tabcontent">
                                    <h3>Comentários</h3>
                                    <p>Zezinho: Que aula chata!</p>
                                </div>

                            </div>

                </div>

                <div class="container-track-curso col-4">
                    <div class="nome-curso">
                        <h2>
                            <%= topico.nome %>
                        </h2>
                    </div>

                    <div class="container-topicos-curso">
                        <ol class="topicos-curso">
                                <% topico.aulas.forEach((aula, index)=> { %>
                                    <li> <span onclick="load(`<%- aula.url_aula %>`)">
                                            <%= aula.nome %>
                                        </span>
                                    </li>

                                    <a
                                            href="/disciplinas/<%= id_disciplina %>/professores/<%= id_professor %>/topicos/<%= topico.id %>/aulas/<%= aula.id %>/form">
                                            <button type="submit">Editar aulas</button></a>

                                    <form
                                        action="/disciplinas/<%= id_disciplina %>/professores/<%= id_professor %>/topicos/<%= topico.id %>/aulas/<%= aula.id %>/?_method=DELETE"
                                        method="POST" enctype="multipart/form-data">
                                        <button type="submit">deletar></button>>
                                    </form>
                                    <% }) %>
                    </div>
                </div>
            </div>
            </div>
            </div>
        </main>
