<%- include('./partials/head') %>
    <link rel="stylesheet" href="/stylesheets/topicos_form.css">
    </head>

    <body>
        <%- include('./partials/header') %>
            <main>

                <div class="container">
                    <div class="content-container">

                        <section class="add-material">

                            <p>EDITAR TÓPICO</p>

                            <% if (topicos.length == 0) { %>
                                <p><%= "cadastre o seu primeiro tópico" %></p>
                            
                            <% } else { %>
                                <p>clique aqui para ver a lista de tópicos já cadastrados</p>
                                <% topicos.forEach(topico => { %>
                                    <p><%= topico.nome %></p>
                                <% }) %>
                            <% } %>

                            <form id="aula" action="/disciplinas/<%= id_disciplina %>/topicos" method="POST">
                                <!-- <div class="lista-topicos">
                                    <button>tópico</button>
                                    <input type="text" name="topico" placeholder="escolha o topico">
                                </div> -->

                                <div class="add-material-cabecalho">
                                    <div>
                                        <button>nome</button>
                                        <input type="text" name="nome" placeholder="digite o nome do tópico">
                                    </div>
                                </div>

                                <button id="adicionar-aula" type="submit">ADICIONAR TÓPICO</button>
                            </form>

                        </section>

                    </div>
                </div>
            </main>
            <%- include('./partials/footer') %>
    </body>

    </html>